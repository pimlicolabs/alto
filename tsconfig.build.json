{
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "preserveConstEnums": true,
        "removeComments": false,
        "resolveJsonModule": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "declaration": true,
        "declarationMap": true,
        "moduleResolution": "node"
    },
    "include": [
        "packages/**/*"
    ],
    "ts-node": {
        "swc": true
    }
}