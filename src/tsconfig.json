{
    "compilerOptions": {
        "outDir": "lib",
        "target": "esnext",
        "module": "commonjs",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "preserveConstEnums": true,
        "removeComments": false,
        "resolveJsonModule": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "declaration": true,
        "declarationMap": true,
        "moduleResolution": "node",
        "paths": {
            "@alto/cli": [
                "./cli"
            ],
            "@alto/executor": [
                "./executor"
            ],
            "@alto/mempool": [
                "./mempool"
            ],
            "@alto/rpc": [
                "./rpc"
            ],
            "@alto/types": [
                "./types"
            ],
            "@alto/utils": [
                "./utils"
            ],
            "@alto/handlers": [
                "./handlers"
            ]
        }
    },
    "ts-node": {
        "swc": true
    },
    "include": [
        "./**/*",
        "./utils/metrics.ts",
        "./cli",
        "./utils/logger.ts"
    ],
    "exclude": [
        "./**/*.test.ts",
        "./lib/*",
        "./node_modules/*"
    ],
    "tsc-alias": {
        "resolveFullPaths": true,
    }
}
