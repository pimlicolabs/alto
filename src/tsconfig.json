{
    "compilerOptions": {
        "outDir": "lib",
        "target": "esnext",
        "module": "commonjs",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "preserveConstEnums": true,
        "removeComments": false,
        "resolveJsonModule": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "declaration": true,
        "declarationMap": true,
        "moduleResolution": "node",

        "paths": {
            "@alto/cli": [
                "./cli"
            ],
            "@alto/executor": [
                "./executor"
            ],
            "@alto/mempool": [
                "./mempool"
            ],
            "@alto/rpc": [
                "./rpc"
            ],
            "@alto/types": [
                "./types"
            ],
            "@alto/utils": [
                "./utils"
            ]
        },

        "inlineSources": true,

        // Set `sourceRoot` to  "/" to strip the build path prefix
        // from generated source code references.
        // This improves issue grouping in Sentry.
        "sourceRoot": "/"
    },
    "ts-node": {
        "swc": true
    },
    "include": [
        "./**/*",
        "./utils/metrics.ts",
        "./cli",
        "./utils/logger.ts"
    ],
    "exclude": [
        "./**/*.test.ts",
        "./lib/*",
        "./node_modules/*"
    ],
    "tsc-alias": {
        "resolveFullPaths": true,
    }
}